                        android:id="@+id/merek"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tableline">

                    <TextView
                        android:text="TIPE"
                        android:padding="5dp"
