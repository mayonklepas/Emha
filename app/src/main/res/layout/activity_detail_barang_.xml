                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tableline">

                    <TextView
                        android:text="MEREK"
                        android:padding="5dp"
                        />

                    <TextView
                        android:text=":"
                        android:padding="5dp"
                        />

                    <TextView
                        android:text="MEREK"
