                        android:layout_weight="1"
                        />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tableline">

                    <TextView
                        android:text="NO. RANGKA"
                        android:padding="5dp"
